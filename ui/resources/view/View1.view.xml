<mvc:View controllerName="com.sao.clm.sl.cias.kyma.kymapilot-ui.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" >
					<content>
						<Table id="idEnvTable" inset="false" items="{
								path: '/'
							}">
							<headerToolbar>
								<OverflowToolbar>
									<content>
										<Title text="Environment Variables" level="H2" />
										<ToolbarSpacer />
									</content>
								</OverflowToolbar>
							</headerToolbar>
							<infoToolbar>
								<OverflowToolbar>
									<Label text="Following are the environment values configured in backend app (Kyma)" />
								</OverflowToolbar>
							</infoToolbar>
							<columns>
								<Column width="30%">
									<Text text="Name" />
								</Column>
								<Column width="70%">
									<Text text="Value" />
								</Column>
							</columns>
							<items>
								<ColumnListItem vAlign="Middle">
									<cells>
										<Text text="{key}" />
										<Text text="{val}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>



					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>